                <th>
                    @Html.DisplayNameFor(model => Load.HoursCount)
                </th>
            }
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.PersonalLoad) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EducPlan.Subject.SubjectName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EducPlan.SpecId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gropus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EducPlan.Semester)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EducPlan.Stream.Group)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EducPlan.Stream.StudCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EducPlan.Att)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EducPlan.Zet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EducPlan.LectionsCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EducPlan.PractiseCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EducPlan.LabWorkCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TeachersInfo)
            </td>
            @foreach (var load in item.Loads)
            {
                <td>
                    @Html.DisplayFor(modelItem => load.Teacher.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => load.HoursCount)
                </td>
            }
            <td>
                <a asp-page="./Edit" asp-route-id="@item.PersonalLoadId">Изменить</a>
            </td>
        </tr>
}
    </tbody>
</table>
