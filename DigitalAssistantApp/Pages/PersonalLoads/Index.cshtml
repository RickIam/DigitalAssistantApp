<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PersonalLoad[0].EducPlan.Subject.SubjectName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PersonalLoad[0].EducPlan.SpecId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PersonalLoad[0].Gropus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PersonalLoad[0].EducPlan.Semester)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PersonalLoad[0].EducPlan.Stream.Group)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PersonalLoad[0].EducPlan.Stream.StudCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PersonalLoad[0].EducPlan.Att)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PersonalLoad[0].EducPlan.Zet)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PersonalLoad[0].EducPlan.LectionsCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PersonalLoad[0].EducPlan.PractiseCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PersonalLoad[0].EducPlan.LabWorkCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PersonalLoad[0].TeachersInfo)
            </th>
            @foreach (var Load in Model.PersonalLoad.FirstOrDefault().Loads)
            {
                <th>
                    @Html.DisplayNameFor(model => Load.Teacher.FullName)
